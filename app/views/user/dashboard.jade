#userId(data-id=user._id.toString())
  #user User: #{(user.username)}
  #wood Wood: #{(user.wood)}
  #cash Cash: $#{(user.cash)}
  //- #beacon #{(user.wood)}
  button#plant Plant Seed
  button#getforest Get Forest
  button#trade Exchange
  input#woodtrade(type='text', autofocus=true, placeholder='Wood to Trade')
  if(user.isAutoGrowAvailable)
    button#buyAutoGrow Buy Autogrow
  #items
    each item in user.items
      case item.type
       when 'autogrow'
         include ../items/autogrow
